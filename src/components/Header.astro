---
import { siteData, mainMenu } from "../global";
---
<header class="@container bg-zinc-900 border-zinc-800 border-b-2">
    <div class="flex flex-row flex-wrap justify-between gap-4 mx-auto p-4 container">
        <p><a href="/" class="hover:text-zinc-50">{siteData.name}</a></p>
        <nav>
            <ul class="flex flex-row flex-wrap gap-4">
                {mainMenu.map(item => (
                <li>
                    <a href={item.href} target={item.isExternal ? "_blank" : undefined} rel={item.isExternal ? "noopener noreferrer" : undefined} class="hover:text-zinc-50">{item.label}</a>
                </li>
                ))}
            </ul>
        </nav>
    </div>
</header>